       <label for="location">Location</label>
       <input type="text" name="location" /></div>

<!------------------Title------------------>
            <div class="field"> 
        <label for="title">Title</label><input<br>
        <input type="text" name="title" />
    </div>

<!---------------Description------------------>
    <div class="field"> 
       <label for="body">Description</label><br>
        <textarea name="body" cols="30" rows="10" placeholder="Share your travel experience"></textarea>
    </div>
    <!---------------Image Uploader--------------->
    <input type="file" name="img" multiple><br>

<!-----------------Submit Button------------->
        <br><input type="submit" value="Publish Experience" />
    </div>
    </form>
    </main>
</body>
