<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs')%> <%- include('../partials/header.ejs')%>
  <body>
    <!-- Displays All Information Submitted on Form -->
    <nav>
      <h1><%= entry.location %></h1>
      <h4>Date: <%= entry.date %></h4>
      <br />
    </nav>
    <nav>
      <ul>
        Title: <%= entry.title %><br />
        <%= entry.body %><br />
      </ul>
      <!-- Delete Option -->
      <section>
        <form action="/entries/<%= entry._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" />
        </form>
        <!-- Edit Option -->
        <form>
          <a href="/entries/<%= entry._id %>/edit">Edit</a>
        </form>
      </section>
    </nav>
  </body>
  <%- include('../partials/footer.ejs')%>
</html>
