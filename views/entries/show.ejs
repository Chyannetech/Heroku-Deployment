<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs')%>
  </head>
  <body>
    <header><%- include('../partials/header.ejs')%></header>

    <!-- Displays title and date -->
    <nav>
      <h1><%= entry.location %></h1>
      <h6>Date: <%= entry.date %></h6>
      <br />
    </nav>
    <nav>
      <ul>
        Title: <%= entry.title %><br />
        <%= entry.body %><br />
        <img src="<%= entry.img %>" alt="<%= entry.title %>" /><br />
      </ul>

      <!-- Delete Option -->
      <section>
        <form action="/entries/<%= entry._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" />
        </form>
        <form>
          <a href="/entries/<%= entry._id %>/edit">Edit</a>
        </form>
      </section>
    </nav>
  </body>
  <footer><%- include('../partials/footer.ejs')%></footer>
</html>
